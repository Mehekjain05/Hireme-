<!DOCTYPE html>

<head>
    <title>Login Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-form {
            width: 340px;
            margin: 50px auto;
            font-size: 15px;
        }

        .login-form form {
            margin-bottom: 15px;
            background-color: #fff;
            border: 1px solid #f2f2f2;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 8px 20px -10px rgba(0, 0, 0, 0.75);
        }

        .login-form h2 {
            margin: 0 0 15px;
            font-size: 22px;
            text-align: center;
        }

        .login-form .form-control {
            border-radius: 5px;
        }

        .login-form .btn {
            font-size: 16px;
            font-weight: bold;
            background-color: #4caf50;
            border-color: #4caf50;
            border-radius: 5px;
            padding: 10px 20px;
            margin-top: 20px;
            color: #fff;
        }

        .login-form .btn:hover {
            background-color: #43a047;
            border-color: #43a047;
        }

        .login-form .forgot-link {
            text-align: right;
            margin-top: 10px;
        }

        .login-form .forgot-link a {
            color: #777;
        }

        .login-form .forgot-link a:hover {
            color: #555;
        }

        .login-form .signup-link {
            text-align: center;
            margin-top: 20px;
        }

        .login-form .signup-link a {
            color: #777;
        }

        .login-form .signup-link a:hover {
            color: #555;
        }

        select {
            font-size: 16px;
            padding: 8px;
            border: none;
            background-color: #f2f2f2;
            color: #555;
            border-radius: 4px;
        }

        select:hover {
            background-color: #ddd;
        }

        select:focus {
            outline: none;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>

<body>
    <div class="login-form">
        <form action="/recruiter/login" method="post">
            <h2>Login</h2>
            <label>Type of User : </label>
            <select name="toggle" id="toggle">
                <option value="user">Applicant</option>
                <option value="recruitor">Recruitor</option>
            </select>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="pass" id="password" placeholder="Enter password">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Login</button>
            <div class="forgot-link">
                <a href="#">Forgot password?</a>
            </div>
            
            
            
        </form>
        <div class="signup-link">
            Don't have an account? <a style="cursor: pointer;" onclick="go()">Sign up</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>
<script>
function go(){
    var value = document.getElementById("toggle").value;
    console.log("hello"+value)
    location.href="/applicant/step1/" + value
}


</script>

</html>